{
    "manifest_version": 2,
    "name": "Github notify",
    "description": "Describe the current open issues",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Click here!"
    },
    "permissions": [
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*",
        "webRequest"
    ],
    "background": {
        "scripts": [
            "assets/js/background.js"
        ]
    }
}